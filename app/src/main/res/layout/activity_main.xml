<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- TextView que será responsável por exibir na tela se um dos números de
    1 a 5 foram desenhados-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="#001301"
        android:textSize="20sp"/>

    <!--Aqui está sendo adicionado o campos aonde será desenhado os números
    de 1 a 5 que o sistema deverá reconhecer -->>
    <android.gesture.GestureOverlayView
        android:id="@+id/gestureOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"/>

</LinearLayout>